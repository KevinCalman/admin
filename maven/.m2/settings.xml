<!-- $Author$ $Change$ $DateTime$ $File$ $Revision$ -->
<settings>
	<localRepository>/var/local/mvn/repository</localRepository>
	<profiles>
		<profile>
			<id>compiler</id>
			<properties>
				<JAVA_1_5_HOME>/usr/java/jdk1.5.0_22</JAVA_1_5_HOME>
				<JAVA_1_6_HOME>/usr/java/jdk1.6.0_26</JAVA_1_6_HOME>
				<JAVA_1_7_HOME>/usr/java/jdk1.7.0_17</JAVA_1_7_HOME>
			</properties>
		</profile>

		<profile>
			<id>psql-linux-setup</id>
			<activation>
				<os>
					<family>Linux</family>
				</os>
			</activation>
			<properties>
				<gunzip.full.path>/bin/gunzip</gunzip.full.path>
				<psql.full.path>/usr/bin/psql</psql.full.path>
				<psql.password>postgres</psql.password>
				<psql.quote.char>"</psql.quote.char>
			</properties>
		</profile>

		<profile>
			<id>psql-windows-setup</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<psql.full.path>C:\\Program Files\\PostgreSQL\\8.3\\bin\\psql.exe</psql.full.path>
				<psql.password>postgres</psql.password>
				<psql.quote.char>\"</psql.quote.char>
			</properties>
		</profile>

		<profile>
			<id>m1-integration-repository-info</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<artifactory.url>http://artifactory2.lab.dgslab.com:8081/artifactory</artifactory.url>
				<!-- can't use '.' in property ...but in maven -->
				<siteDeployURL>scp://hudson.lab.dgslab.com/var/www/html/projects</siteDeployURL>
				<siteWWW>http://hudson.lab.dgslab.com/projects</siteWWW>
				<artifactory_user>build</artifactory_user>
				<artifactory_pass>makeitso</artifactory_pass>
				<perforce_user>build</perforce_user>
				<perforce_pass>makeitso</perforce_pass>
				<default.release.repo>libs-release</default.release.repo>
				<default.snapshot.repo>libs-snapshot</default.snapshot.repo>
				<default.plugins.release.repo>plugins-release</default.plugins.release.repo>
				<default.plugins.snapshot.repo>plugins-snapshot</default.plugins.snapshot.repo>
			</properties>
			<repositories>
				<repository>
					<id>central</id>
					<name>libs-release</name>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/libs-release</url>
				</repository>

				<repository>
					<id>snapshots</id>
					<name>libs-snapshot</name>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/libs-snapshot</url>
				</repository>
<!--
				<repository>
					<id>art2-libs-release</id>
					<name>art2-libs-release</name>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/libs-release</url>
				</repository>
-->
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>central</id>
					<name>plugins-release</name>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/plugins-release</url>
				</pluginRepository>

				<pluginRepository>
					<id>snapshots</id>
					<name>plugins-snapshot</name>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/plugins-snapshot</url>
				</pluginRepository>
<!--
				<pluginRepository>
					<id>art2-plugins-release</id>
					<name>art2-plugins-release</name>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>http://artifactory2.lab.dgslab.com:8081/artifactory/plugins-release</url>
				</pluginRepository>
-->
			</pluginRepositories>
		</profile>
	</profiles>
	<activeProfiles>
		<activeProfile>compiler</activeProfile>
	</activeProfiles>
	<servers>
		<server>
			<id>central</id>
			<username>build</username>
			<password>makeitso</password>
		</server>

		<server>
			<id>snapshots</id>
			<username>build</username>
			<password>makeitso</password>
		</server>

		<!-- hudson user/password for scp access when site deploying -->
		<server>
			<id>site</id>
			<username>build</username>
<!--			<privateKey>${user.home}/.ssh/id_rsa</privateKey> -->
			<password>makeitso</password>
		</server>
	</servers>
</settings>
